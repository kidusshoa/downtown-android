{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-native"
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
